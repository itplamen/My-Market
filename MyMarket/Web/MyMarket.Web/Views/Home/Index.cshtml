@using MyMarket.Web.Models.Home

@model SelectedAdsViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<h2>Latest Ads</h2>
<div class="row">
    @foreach (var latestAd in Model.LatestAds)
    {
        <div class="col-md-3">
            @this.Html.DisplayFor(_ => latestAd)
        </div>
    }
</div>

<h2>Most Liked Ads</h2>
<div class="row">
    @foreach (var likedAd in Model.MostLiked)
    {
        <div class="col-md-3">
            @this.Html.DisplayFor(_ => likedAd)
        </div>
    }
</div>